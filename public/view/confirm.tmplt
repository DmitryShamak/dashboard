<div id="confirm-wrapper">
	<div class="confirm" data-ng-class="{'active': confirmation.active}">
		<h2 class="title text-center">{{confirmation.text}}</h2>
		<div class="confirm-control clearfix">
			<div class="btn btn-confirm pull-left" data-ng-click="confirmation.onConfirm()">Confirm</div>
			<div class="btn btn-cancel pull-right" data-ng-click="confirmation.onCancel()">Cancel</div>
		</div>
	</div>
</div>